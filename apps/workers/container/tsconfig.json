{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "../../",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "../../",
        "typeRoots": [
            "../../node_modules/@types",
            "../../node_modules"
        ],
        "types": [
            "@cloudflare/workers-types"
        ]
    },
    "include": [
        "index.ts",
        "video-worker.ts",
        "../../src/**/*"
    ]
}
{
  "name": "presentation-maker-monorepo",
  "private": true,
  "scripts": {
    "build": "pnpm --filter \"./packages/*\" build && pnpm --filter \"./apps/*\" build",
    "dev:cli": "pnpm --filter @presentation-maker/cli dev",
    "dev:server": "pnpm --filter @presentation-maker/server dev",
    "dev:web": "pnpm --filter @presentation-maker/web dev",
    "dev:worker:api": "pnpm --filter @presentation-maker/worker-api dev",
    "docker:build": "docker build -t presentation-maker-worker -f apps/workers/container/Dockerfile .",
    "clean": "pnpm -r run clean",
    "test": "pnpm -r test"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@9.7.1"
}

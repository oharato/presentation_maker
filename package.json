{
  "name": "presentation_maker",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "clean": "rimraf dist output/*",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "dev:server": "ts-node server/server.ts",
    "dev:web": "cd web && pnpm dev",
    "dev:services": "wsl docker compose up",
    "dev": "concurrently --kill-others \"pnpm dev:services\" \"pnpm dev:server\" \"pnpm dev:web\"",
    "dev:clean": "taskkill /F /IM node.exe & timeout /t 2 /nobreak & pnpm dev",
    "build:web": "cd web && pnpm build",
    "redis:start": "wsl docker compose up -d",
    "redis:stop": "wsl docker compose down",
    "redis:logs": "wsl docker compose logs -f redis",
    "services:start": "wsl docker compose up -d",
    "services:stop": "wsl docker compose down",
    "services:logs": "wsl docker compose logs -f",
    "download:sherpa-onnx": "node scripts/download-sherpa-onnx.js",
    "build:workers": "tsc --project tsconfig.workers.json",
    "dev:workers": "wrangler dev",
    "deploy:workers": "wrangler deploy",
    "deploy:workers:staging": "wrangler deploy --env staging",
    "deploy:workers:production": "wrangler deploy --env production",
    "deploy:pages": "cd web && pnpm build && wrangler pages deploy dist",
    "deploy:pages:staging": "cd web && pnpm build && wrangler pages deploy dist --project-name presentation-maker-staging",
    "deploy:pages:production": "cd web && pnpm build && wrangler pages deploy dist --project-name presentation-maker",
    "docker:build:worker": "wsl docker build -t presentation-maker-worker -f workers/container/Dockerfile .",
    "docker:build:voicevox": "wsl docker build -t presentation-maker-voicevox -f workers/container/voicevox/Dockerfile .",
    "docker:build": "pnpm docker:build:worker && pnpm docker:build:voicevox",
    "cloudflare:start": "wsl docker compose -f docker-compose.cloudflare.yml up -d",
    "cloudflare:stop": "wsl docker compose -f docker-compose.cloudflare.yml down",
    "cloudflare:logs": "wsl docker compose -f docker-compose.cloudflare.yml logs -f",
    "deploy:all": "pnpm build:workers && pnpm deploy:workers:production && pnpm deploy:pages:production"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251121.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.13",
    "@vitest/ui": "^4.0.13",
    "concurrently": "^9.2.1",
    "jest": "^30.2.0",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13",
    "wrangler": "^4.50.0"
  },
  "packageManager": "pnpm@9.7.1+sha1.b0ae55d11432e1af341998848fdc219a62f7623a",
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@hono/node-server": "^1.19.6",
    "@upstash/redis": "^1.35.6",
    "axios": "^1.13.2",
    "bull": "^4.16.5",
    "dotenv": "^17.2.3",
    "fs-extra": "^11.3.2",
    "glob": "^12.0.0",
    "hono": "^4.10.6",
    "ioredis": "^5.8.2",
    "marked": "^17.0.1",
    "multer": "^2.0.2",
    "puppeteer": "^24.31.0",
    "redis": "^5.10.0",
    "socket.io": "^4.8.1",
    "uuid": "^13.0.0"
  },
  "pnpm": {
    "overrides": {
      "glob@<8": ">=11.0.0",
      "inflight": "npm:@aashutoshrathi/inflight-that-doesnt-suck@^1.0.0"
    }
  },
  "comments": {
    "fluent-ffmpeg": "Deprecated but still used in CLI mode (src/services). Not used in Cloudflare Workers."
  }
}